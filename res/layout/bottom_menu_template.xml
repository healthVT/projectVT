<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:id="@+id/bottomMenu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/menuLayout"
            >
        <LinearLayout android:id="@+id/linearButton"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerHorizontal="true"
                      >
            <Button android:id="@+id/todayButton"
                    android:text="Today"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/buttonBackground"
                    android:textColor="@color/buttonTextAvaliable"
                    />
            <Button android:id="@+id/logButton"
                    android:text="Log"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/buttonBackground"
                    android:textColor="@color/buttonTextAvaliable"
                    android:layout_marginLeft="10dp"
                    />
            <Button android:id="@+id/fbButton"
                    android:text="Facebook"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/buttonBackground"
                    android:textColor="@color/buttonTextAvaliable"
                    android:layout_marginLeft="10dp"
                    />
            <Button android:id="@+id/aboutButton"
                    android:text="About"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:background="@color/buttonBackground"
                    android:textColor="@color/buttonTextAvaliable"
                    android:layout_marginLeft="10dp"
                    />
        </LinearLayout>
    </RelativeLayout>

</merge>