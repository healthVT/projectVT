<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="defaultStyle" parent="@android:style/Theme.Holo.Light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorPrimary">#616161</item>
        <item name="android:textColor">#616161</item>
        <item name="android:editTextStyle">@style/vtEditTextStyle</item>
        <item name="android:buttonStyle">@style/vtButtonStyle</item>
    </style>

    <style name="vtEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#030303</item>
    </style>

    <style name="vtButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#616161</item>
    </style>
</resources>